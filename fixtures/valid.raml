#%RAML 0.8
title: gref
version: 1

baseUri: http://github.com/buddhamagnet/ramlapi
documentation:
  -  title: Overview

/testapi/{foo}:
  description: Test API for the ramlapi package.
  uriParameters:
    foo:
      displayName: Foo bar
      type: string
      pattern: "[0-9]{5}"
  get:
    displayName: get.
    queryParameters:
      Country:
        type: string
        description: User country code
        example: GB
        required: true
        pattern: "[a-z]{2}"
      City:
        type: string
        description: User city name
        example: Adelaide
        required: false
  post:
    displayName: post
  put:
    displayName: put
  patch:
    displayName: patch
  head:
    displayName: head
  delete:
    displayName: delete
  /{bar}:
    description: Nested example
    uriParameters:
      bar:
        displayName: Foo bar
        type: string
        pattern: "[a-z]{5}"
        required: true
    get:
      displayName: Nested get
