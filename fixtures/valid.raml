#%RAML 0.8
title: gref
version: 1

baseUri: http://github.com/buddhamagnet/ramlapi
documentation:
  -  title: Overview

/testapi:
  description: Test API for the ramlapi package.
  get:
    displayName: get test endpoint.
    queryParameters:
      country:
        displayName: country
        type: string
        description: User country code
        example: GB
        required: true
        pattern: "{[a-z]{2}}"
      city:
        displayName: City
        type: string
        description: User city name
        example: Adelaide
        required: true
  post:
    displayName: Post test
  put:
    displayName: Put test
  patch:
    displayName: Patch test
  head:
    displayName: Head test
  delete:
    displayName: Delete test
